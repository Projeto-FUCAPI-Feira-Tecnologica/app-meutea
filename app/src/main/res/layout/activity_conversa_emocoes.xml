<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.activities.conversa.activity_conversa_emocoes"
    android:background="@drawable/background_conversa">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnVoltarConversa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back_foreground"
            android:background="@drawable/roundcorner"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="24dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Emoções"
            android:gravity="center_vertical|center_horizontal"
            android:layout_marginTop="28dp"
            android:textSize="32sp"
            android:fontFamily="@font/montserrat_semibold"
            android:textColor="#000000" />
    </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="50dp"
                android:columnCount="1"
                android:rowCount="5">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewFeliz"
                    android:layout_width="wrap_content"
                    android:layout_height="250dp"
                    android:layout_row="0"
                    android:layout_rowWeight="1"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="16dp"
                    android:backgroundTint="#D0DCF3"
                    app:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="FELIZ"
                            android:textAlignment="center"
                            android:textColor="#000000"
                            android:textSize="36sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="250dp"
                            android:layout_height="160dp"
                            android:src="@mipmap/ic_conversa_feliz_foreground"/>


                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Emoções -->

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewDormir"
                    android:layout_width="wrap_content"
                    android:layout_height="250dp"
                    android:layout_row="1"
                    android:layout_rowWeight="2"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:layout_margin="8dp"
                    android:backgroundTint="#D0DCF3"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="DORMIR"
                            android:textAlignment="center"
                            android:textColor="#000000"
                            android:textSize="36sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="250dp"
                            android:layout_height="160dp"
                            android:src="@mipmap/ic_conversa_dormir_foreground" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Necessidades -->

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewBarulho"
                    android:layout_width="wrap_content"
                    android:layout_height="250dp"
                    android:layout_row="3"
                    android:layout_rowWeight="1"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:layout_margin="8dp"
                    android:backgroundTint="#D0DCF3"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="BARULHO"
                            android:textAlignment="center"
                            android:textColor="#000000"
                            android:textSize="36sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="250dp"
                            android:layout_height="160dp"
                            android:src="@mipmap/ic_conversa_barulho_foreground" />



                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewTeAmo"
                    android:layout_width="wrap_content"
                    android:layout_height="250dp"
                    android:layout_row="4"
                    android:layout_rowWeight="1"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:backgroundTint="#D0DCF3"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TE AMO"
                            android:textAlignment="center"
                            android:textColor="#000000"
                            android:textSize="36sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="250dp"
                            android:layout_height="160dp"
                            android:src="@mipmap/ic_conversa_teamo_foreground" />



                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </GridLayout>

        </RelativeLayout>

    </LinearLayout>

</ScrollView>